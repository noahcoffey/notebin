# Supabase configuration for note sharing
# Create a free project at https://supabase.com

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# To set up sharing:
# 1. Create a Supabase project
# 2. Run this SQL in the SQL Editor:
#
# create table shared_notes (
#   id uuid default gen_random_uuid() primary key,
#   title text not null,
#   content text not null,
#   created_at timestamp with time zone default now(),
#   expires_at timestamp with time zone
# );
#
# -- Enable public read access
# alter table shared_notes enable row level security;
# create policy "Anyone can view shared notes" on shared_notes for select using (true);
# create policy "Anyone can create shared notes" on shared_notes for insert with check (true);
#
# 3. Copy your project URL and anon key from Settings > API
# 4. Create a .env file with your credentials
